<h1>Listing posts</h1>

<div class="inifnite-table">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="page">
   <% render @posts %>
  </tbody>
</table>

<br>

<p class="pagination">
<%= link_to_next_page(@posts, 'Next Page', :remote => true)%>
</p>
</div>
