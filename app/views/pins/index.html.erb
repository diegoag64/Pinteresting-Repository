<%= render 'pages/home' unless user_signed_in?%>



<div id="pins" class="transitions-enabled">
   <% @pins.each do |pin| %>
   <div class="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %>
        <div class="panel-body">
          <%= pin.description %><br/>
          <strong><%= pin.user.name if pin.user %></strong><br/>
          <%= time_ago_in_words(pin.created_at) + ' ago' %>

        </br>
            <div class="btn-group">
                <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
            <% if pin.user == current_user %>

            
                    Actions <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
              <li>
            <%= link_to edit_pin_path(pin), class: "white" do %>
            <span class="glyphicon glyphicon-edit"></span> Edit
            <% end %>  
            </li>


          
           
            <% end %>

                        <% if current_user.try(:admin?) %>
                <li>    
                <%= link_to  pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "white" do %>
                <span class="glyphicon glyphicon-trash"></span> S.Delete
                <% end %>
              </li>
            <% elsif pin.user == current_user %>
            <li>    
                <%= link_to  pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "white" do %>
                <span class="glyphicon glyphicon-trash"></span>Delete
                <% end %>
              </li> 
                <% end %>
            <% if user_signed_in? %>
              <% if pin.get_likes.size == 0 %>
              <li>
              <%= link_to like_pin_path(pin), method: :put, class: "white" do %>
              <span class="glyphicon glyphicon-thumbs-up"></span> Like
              <% end %>
            </li>
              <% else %>
              <li>
              <%= link_to dislike_pin_path(pin), method: :put, class: "white" do%>
              <span class="glyphicon glyphicon-thumbs-down"></span> Unlike
              <% end %>
              <% end %>
            </li>

            </div>

          </ul>


           
            <br/>
              Likes:
              <%= pin.get_likes.size %>





            <% end %>
          
        </div>
    </div>
    <% end %>
</div>
<div class="center">
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>